<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Re_RunApp.Views.RouteDetailsScreen"
             Title="Route Details">
    <Grid RowDefinitions="*,Auto" ColumnDefinitions="1*,3*">
        <!-- Route Details -->
        <StackLayout Grid.Row="0" Grid.Column="0" Padding="10">
            <Label x:Name="RouteNameLabel" Text="Name: " FontSize="18" />
            <Label x:Name="TotalDistanceLabel" Text="Total Distance: " FontSize="18" />
            <Label x:Name="TotalElevationLabel" Text="Total Elevation: " FontSize="18" />
        </StackLayout>

        <!-- Route Elevation Graph -->
        <Image x:Name="ElevationGraphImage" Grid.Row="0" Grid.Column="1" Margin="10" Aspect="AspectFit" />

        <!-- Speed Settings -->
        <StackLayout Grid.Row="1" Grid.ColumnSpan="2" Padding="10" BackgroundColor="#f0f0f0">
            <Label Text="Speed Settings (km/h)" FontSize="20" FontAttributes="Bold" />
            <Grid ColumnDefinitions="2*,3*,1*" RowDefinitions="Auto,Auto,Auto,Auto,Auto">
                <Label Text="0-5%" Grid.Row="0" Grid.Column="0" VerticalOptions="Center" />
                <HorizontalStackLayout Grid.Row="0" Grid.Column="1" Spacing="10">
                    <Button Text="-" WidthRequest="40" Clicked="OnDecreaseSpeed0to5" />
                    <Label x:Name="Speed0to5Label" Text="8.0" VerticalOptions="Center" HorizontalOptions="CenterAndExpand" />
                    <Button Text="+" WidthRequest="40" Clicked="OnIncreaseSpeed0to5" />
                </HorizontalStackLayout>
                <Label Text="km/h" Grid.Row="0" Grid.Column="2" VerticalOptions="Center" />

                <Label Text="6-8%" Grid.Row="1" Grid.Column="0" VerticalOptions="Center" />
                <HorizontalStackLayout Grid.Row="1" Grid.Column="1" Spacing="10">
                    <Button Text="-" WidthRequest="40" Clicked="OnDecreaseSpeed6to8" />
                    <Label x:Name="Speed6to8Label" Text="7.3" VerticalOptions="Center" HorizontalOptions="CenterAndExpand" />
                    <Button Text="+" WidthRequest="40" Clicked="OnIncreaseSpeed6to8" />
                </HorizontalStackLayout>
                <Label Text="km/h" Grid.Row="1" Grid.Column="2" VerticalOptions="Center" />

                <Label Text="8-10%" Grid.Row="2" Grid.Column="0" VerticalOptions="Center" />
                <HorizontalStackLayout Grid.Row="2" Grid.Column="1" Spacing="10">
                    <Button Text="-" WidthRequest="40" Clicked="OnDecreaseSpeed8to10" />
                    <Label x:Name="Speed8to10Label" Text="7.0" VerticalOptions="Center" HorizontalOptions="CenterAndExpand" />
                    <Button Text="+" WidthRequest="40" Clicked="OnIncreaseSpeed8to10" />
                </HorizontalStackLayout>
                <Label Text="km/h" Grid.Row="2" Grid.Column="2" VerticalOptions="Center" />

                <Label Text="11-12%" Grid.Row="3" Grid.Column="0" VerticalOptions="Center" />
                <HorizontalStackLayout Grid.Row="3" Grid.Column="1" Spacing="10">
                    <Button Text="-" WidthRequest="40" Clicked="OnDecreaseSpeed11to12" />
                    <Label x:Name="Speed11to12Label" Text="6.7" VerticalOptions="Center" HorizontalOptions="CenterAndExpand" />
                    <Button Text="+" WidthRequest="40" Clicked="OnIncreaseSpeed11to12" />
                </HorizontalStackLayout>
                <Label Text="km/h" Grid.Row="3" Grid.Column="2" VerticalOptions="Center" />

                <Label Text="13-15%" Grid.Row="4" Grid.Column="0" VerticalOptions="Center" />
                <HorizontalStackLayout Grid.Row="4" Grid.Column="1" Spacing="10">
                    <Button Text="-" WidthRequest="40" Clicked="OnDecreaseSpeed13to15" />
                    <Label x:Name="Speed13to15Label" Text="6.3" VerticalOptions="Center" HorizontalOptions="CenterAndExpand" />
                    <Button Text="+" WidthRequest="40" Clicked="OnIncreaseSpeed13to15" />
                </HorizontalStackLayout>
                <Label Text="km/h" Grid.Row="4" Grid.Column="2" VerticalOptions="Center" />
            </Grid>
            <Button Text="Start" Clicked="OnStartClicked" Margin="0,10,0,0" />
        </StackLayout>
    </Grid>
</ContentPage>