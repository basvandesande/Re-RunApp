<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:oxy="clr-namespace:OxyPlot.Maui.Skia;assembly=OxyPlot.Maui.Skia"
             x:Class="Re_RunApp.Views.RouteDetailsScreen"
             Title="Route Details"
             BackgroundColor="White" >
    <Grid RowDefinitions="2*,2.4*,Auto"> <!-- Added Auto for the Start button -->
        <Grid Grid.Row="0">
            <!-- PlotView als achtergrond -->
            <oxy:PlotView x:Name="PlotView"
                          VerticalOptions="FillAndExpand"
                          HorizontalOptions="FillAndExpand" />

            <!-- Hyperlink Label als overlay -->
            <Label Text="Simulator"
                   x:Name="SimulatorLabel"
                   TextColor="DarkGray"
                   FontAttributes="Bold"
                   TextDecorations="Underline"
                   Padding="8,2"
                   FontSize="14"
                   BackgroundColor="#AAFFFFFF"
                   HorizontalOptions="End"
                   VerticalOptions="Start"
                   Margin="10">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnHyperlinkTapped"/>
                </Label.GestureRecognizers>
            </Label>
        </Grid>
        <!-- Bottom Section with Two Columns -->
        <Grid Grid.Row="1" ColumnDefinitions="2*,1*" Padding="10">
            <!-- Route Details -->
            <StackLayout Grid.Column="0" Padding="10" BackgroundColor="#f0f0f0">
                <Label Text="Route Details" FontSize="22" FontAttributes="Bold" />
                <Label x:Name="RouteNameLabel" Text="Name: " FontSize="18" />
                <Label x:Name="TotalDistanceLabel" Text="Total Distance: " FontSize="18" />
                <Label x:Name="TotalElevationLabel" Text="Total Elevation: " FontSize="18" />
                <Label x:Name="TotalAscendLabel" Text="Total Ascend: " FontSize="18" />

                <!-- Row with two buttons below the route details -->
                <HorizontalStackLayout Margin="0,15,0,0" Spacing="15" VerticalOptions="End">
                    <Button Text="+ Treadmill" 
                            x:Name="ConnectTreadmillButton"
                            Clicked="OnConnectTreadmillClicked"
                            HorizontalOptions="FillAndExpand" VerticalOptions="End"/>
                    <Button Text="+ Heart sensor" 
                            x:Name="ConnectHeartRateButton"
                            Clicked="OnConnectHeartRateClicked"
                            HorizontalOptions="FillAndExpand"/>
                </HorizontalStackLayout>
            </StackLayout>

            <!-- Speed Settings -->
            <StackLayout Grid.Column="1" Padding="10" BackgroundColor="#f0f0f0">
                <Label Text="Speed Settings (km/h)" FontSize="22" FontAttributes="Bold" />
                <Grid ColumnDefinitions="2*,3*,1*" RowDefinitions="Auto,Auto,Auto,Auto,Auto, Auto">
                    <Label Text="0-5%" Grid.Row="0" Grid.Column="0" FontSize="18" VerticalOptions="Center" />
                    <HorizontalStackLayout Grid.Row="0" Grid.Column="1" Margin="0,2" Spacing="10">
                        <Button Text="-" WidthRequest="40" FontSize="18" Clicked="OnDecreaseSpeed0to5" BackgroundColor="green" />
                        <Label x:Name="Speed0to5Label" Text="8.0"  FontSize="18" VerticalOptions="Center" HorizontalOptions="CenterAndExpand" />
                        <Button Text="+" WidthRequest="40" FontSize="18" Clicked="OnIncreaseSpeed0to5" BackgroundColor="Green" />
                    </HorizontalStackLayout>
                    <Label Text="km/h" Grid.Row="0" Grid.Column="2" FontSize="18" VerticalOptions="Center" />

                    <Label Text="6-8%" Grid.Row="1" Grid.Column="0" FontSize="18" VerticalOptions="Center" />
                    <HorizontalStackLayout Grid.Row="1" Grid.Column="1" Margin="0,2" Spacing="10">
                        <Button Text="-" WidthRequest="40" FontSize="18" Clicked="OnDecreaseSpeed6to8" BackgroundColor="Yellow"/>
                        <Label x:Name="Speed6to8Label" Text="7.3" FontSize="18" VerticalOptions="Center" HorizontalOptions="CenterAndExpand" />
                        <Button Text="+" WidthRequest="40" FontSize="18" Clicked="OnIncreaseSpeed6to8" BackgroundColor="Yellow" />
                    </HorizontalStackLayout>
                    <Label Text="km/h" Grid.Row="1" Grid.Column="2" FontSize="18" VerticalOptions="Center" />

                    <Label Text="8-10%" Grid.Row="2" Grid.Column="0" FontSize="18" VerticalOptions="Center" />
                    <HorizontalStackLayout Grid.Row="2" Grid.Column="1" Margin="0,2" Spacing="10">
                        <Button Text="-" WidthRequest="40" FontSize="18" Clicked="OnDecreaseSpeed8to10" BackgroundColor="Orange" />
                        <Label x:Name="Speed8to10Label" Text="7.0" FontSize="18" VerticalOptions="Center" HorizontalOptions="CenterAndExpand" />
                        <Button Text="+" WidthRequest="40" FontSize="18" Clicked="OnIncreaseSpeed8to10"  BackgroundColor="orange"/>
                    </HorizontalStackLayout>
                    <Label Text="km/h" Grid.Row="2" Grid.Column="2" FontSize="18" VerticalOptions="Center" />

                    <Label Text="11-12%" Grid.Row="3" Grid.Column="0" FontSize="18" VerticalOptions="Center" />
                    <HorizontalStackLayout Grid.Row="3" Grid.Column="1" Margin="0,2" Spacing="10">
                        <Button Text="-" WidthRequest="40" FontSize="18" Clicked="OnDecreaseSpeed11to12" BackgroundColor="Red"/>
                        <Label x:Name="Speed11to12Label" Text="6.7" FontSize="18" VerticalOptions="Center" HorizontalOptions="CenterAndExpand" />
                        <Button Text="+" WidthRequest="40" FontSize="18" Clicked="OnIncreaseSpeed11to12" BackgroundColor="Red"/>
                    </HorizontalStackLayout>
                    <Label Text="km/h" Grid.Row="3" Grid.Column="2" FontSize="18" VerticalOptions="Center" />

                    <Label Text="13-15%" Grid.Row="4" Grid.Column="0" FontSize="18" VerticalOptions="Center" />
                    <HorizontalStackLayout Grid.Row="4" Grid.Column="1" Margin="0,2" Spacing="10">
                        <Button Text="-" WidthRequest="40" FontSize="18" Clicked="OnDecreaseSpeed13to15" BackgroundColor="DarkRed"/>
                        <Label x:Name="Speed13to15Label" Text="6.3" FontSize="18" VerticalOptions="Center" HorizontalOptions="CenterAndExpand" />
                        <Button Text="+" WidthRequest="40" FontSize="18" Clicked="OnIncreaseSpeed13to15" BackgroundColor="DarkRed"/>
                    </HorizontalStackLayout>
                    <Label Text="km/h" Grid.Row="4" Grid.Column="2" FontSize="18" VerticalOptions="Center" />

                    <CheckBox x:Name="AutoSpeedControlCheckBox" IsChecked="True" Grid.Row="5"  Grid.Column="0" VerticalOptions="Center" HorizontalOptions="Center" />
                    <HorizontalStackLayout Grid.Row="5" Grid.Column="1" Margin="0,2" Spacing="10">
                        <Label Text="Allow Cruise Control" FontSize="18" VerticalOptions="Center"/>
                    </HorizontalStackLayout>
                </Grid>
            </StackLayout>
        </Grid>

        <!-- Start Button -->
        <Button x:Name="StartButton" 
                Text="Start" Grid.Row="2" HorizontalOptions="FillAndExpand"  
                VerticalOptions="Center" 
                Margin="10" 
                Clicked="OnStartClicked" 
                FontSize="Large"
                HeightRequest="50" 
                IsEnabled="False"/>
    </Grid>
</ContentPage>