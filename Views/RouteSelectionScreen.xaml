<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:controls="clr-namespace:Re_RunApp.Views.Controls"
             x:Class="Re_RunApp.Views.RouteSelectionScreen"
             Title="Select Route"
             BackgroundColor="White">
    <Grid RowDefinitions="6*,30,4*,Auto">
        <!-- Achtergrondafbeelding over de hele breedte -->
        <Image Source="routeselection_background.jpg"
               Aspect="AspectFill"
               Grid.RowSpan="4"
               Opacity="0.8" />

        <!-- ListView met routes in lichtgrijs vlak -->
        <Frame Grid.Row="0"
               CornerRadius="10"
               BackgroundColor="#f0f0f0"
               BorderColor="#f0f0f0"
               Padding="0"
               HasShadow="False"
               Opacity="0.7"
               Margin="20,20,20,0">
            <ListView x:Name="RouteListView"
                      SelectionMode="Single"
                      ItemSelected="OnRouteSelected"
                      SeparatorVisibility="Default">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Orientation="Horizontal" Padding="14,8" BackgroundColor="Transparent">
                                <Label Text="{Binding FileName}"
                                       FontSize="18"
                                       TextColor="Black"
                                       FontAttributes="Bold"
                                       VerticalOptions="Center" />
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Frame>

        <!-- Lege ruimte tussen lijst en details -->
        <BoxView Grid.Row="1" HeightRequest="30" BackgroundColor="Transparent" />

        <!-- Grid voor route details -->
        <Frame Grid.Row="2"
               CornerRadius="10"
               BackgroundColor="#33475b"    
               Opacity="0.85"
               BorderColor="#33475b"
               Padding="0"
               HasShadow="False"
               Margin="20,0,20,0">
            <Grid x:Name="DetailsGrid" Padding="16" ColumnDefinitions="1.2*, 4*, 1*" RowSpacing="15" RowDefinitions="Auto,Auto,Auto,Auto">
                <!-- Titel voor de details -->
                <Label Text="Route Details" 
                       FontSize="22" 
                       FontAttributes="Bold" 
                       TextColor="White" 
                       Grid.ColumnSpan="3" 
                       Margin="0,0,0,10" />

                <!-- Rij 1: Title -->
                <Label Text="Title:" 
                       FontSize="18" 
                       TextColor="White" 
                       Grid.Row="1" Grid.Column="0" 
                       VerticalOptions="Center" />
                <Label x:Name="TitleLabel" 
                       FontSize="18" 
                       TextColor="White" 
                       Grid.Row="1" Grid.Column="1" 
                       VerticalOptions="Center" />

                <!-- Rij 2: Distance -->
                <Label Text="Total Distance (km):" 
                       FontSize="18" 
                       TextColor="White" 
                       Grid.Row="2" Grid.Column="0" 
                       VerticalOptions="Center" />
                <Label x:Name="DistanceLabel" 
                       FontSize="18" 
                       TextColor="White" 
                       Grid.Row="2" Grid.Column="1" 
                       VerticalOptions="Center" />

                <!-- Rij 3: Elevation -->
                <Label Text="Total Elevation (m):" 
                       FontSize="18" 
                       TextColor="White" 
                       Grid.Row="3" Grid.Column="0" 
                       VerticalOptions="Center" />
                <Label x:Name="ElevationLabel" 
                       FontSize="18" 
                       TextColor="White" 
                       Grid.Row="3" Grid.Column="1" 
                       VerticalOptions="Center" />
            </Grid>
        </Frame>

        <!-- Video styled as a polaroid photo, with text below -->
        <Frame Grid.RowSpan="4"
               Grid.Column="1"
               BackgroundColor="White"
               BorderColor="#222"
               CornerRadius="2"
               Padding="10,10,10,40" 
               HasShadow="True"
               Margin="0,0,40,100"
               VerticalOptions="End"
               HorizontalOptions="End"
               Rotation="3"
               ZIndex="1"> 
            <Grid RowDefinitions="Auto,Auto">
                <!-- Aspect-ratio container ensures consistent polaroid proportions -->
                <controls:AspectRatioContainer Ratio="0.5625" Grid.Row="0" HorizontalOptions="Center">
                    <toolkit:MediaElement x:Name="RouteVideo"
                                          ShouldAutoPlay="True"
                                          Aspect="AspectFill"
                                          ShouldLoopPlayback="True"
                                          ShouldShowPlaybackControls="False"
                                          ShouldMute="True"
                                          Source="embed://nomedia.mp4"
                                          BackgroundColor="Transparent" />
                </controls:AspectRatioContainer>

                <!-- Text below the video -->
                <Label Text="27-08-2025"
                       x:Name="DateLabel"
                       Grid.Row="1"
                       FontSize="36"
                       FontFamily="PermanentMarker"
                       TextColor="#000E1C"
                       HorizontalOptions="Start"
                       VerticalOptions="End"
                       Padding="15"
                       Opacity="0.7"
                       Rotation="-3" />
            </Grid>
        </Frame>

        <!-- Buttons Grid -->
        <Grid Grid.Row="3" ColumnDefinitions="0.5*, 2*" ColumnSpacing="10" Margin="20,10,20,10">
            <!-- Open Folder Button -->
            <Button x:Name="OpenFolderButton"
                    Grid.Column="0"
                    Text="Data Folder"
                    Clicked="OnOpenFolderClicked"
                    HorizontalOptions="Fill"
                    HeightRequest="55"
                    FontSize="Medium"
                    TextColor="White"
                    CornerRadius="10"/>
            
            <!-- Next Button -->
            <Button x:Name="NextButton"
                    Grid.Column="1"
                    Text="Next"
                    Clicked="OnNextClicked"
                    HorizontalOptions="Fill"
                    HeightRequest="55"
                    FontSize="Large"
                    TextColor="White"
                    CornerRadius="10"/>
        </Grid>
    </Grid>
</ContentPage>