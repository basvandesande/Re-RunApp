<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
            x:Class="Re_RunApp.Views.ActivityScreen"
             Title="Activity">
    <Grid RowDefinitions="2*,2.4*,Auto" ColumnSpacing="0" RowSpacing="10" Padding="10">
        <!-- Top: Two panes (statistics and video) -->
        <Grid Grid.Row="0" ColumnDefinitions="1*,1*" ColumnSpacing="10">
            <!-- Statistics Pane -->
            <Frame Grid.Column="0" Padding="10" BackgroundColor="#f0f0f0" CornerRadius="8">
                <!-- Replace with your statistics UI -->
                <StackLayout>
                    <Label Text="Statistieken" FontAttributes="Bold" FontSize="18"/>
                    <Label x:Name="DistanceLabel" Text="Afstand: 0.0 km"/>
                    <Label x:Name="TimeLabel" Text="Tijd: 00:00"/>
                    <Label x:Name="SpeedLabel" Text="Snelheid: 0.0 km/h"/>
                    <!-- Add more statistics as needed -->
                </StackLayout>
            </Frame>
            <!-- Video Pane -->
            <Frame x:Name="VideoFrame" Grid.Column="1" Padding="0" BackgroundColor="#000" CornerRadius="8" HasShadow="False">
                <!-- Video -->
                <toolkit:MediaElement x:Name="RouteVideo"
                      ShouldAutoPlay="True"
                      Aspect="AspectFill"
                      ShouldLoopPlayback="False"
                      ShouldShowPlaybackControls="False"
                      ShouldMute="True"
                      HorizontalOptions="Center" 
                      Source="embed://no-media.mp4"                
                      VerticalOptions="Center" ShouldKeepScreenOn="True" />
            </Frame>
        </Grid>

        <!-- Middle: Graph -->
        <Frame Grid.Row="1" Padding="0" Margin="0,10,0,10" BackgroundColor="#e0e0e0" CornerRadius="8" HasShadow="False">
            <Image x:Name="ElevationGraphImage" Grid.Row="0" Margin="10" Aspect="Fill" />
        </Frame>

        <!-- Bottom: Finish Button -->
        <Button Grid.Row="2"
                Text="Finish"
                Clicked="OnFinishClicked"
                FontSize="Large"
                HeightRequest="50"
                HorizontalOptions="FillAndExpand"
                Margin="0,10,0,0"/>
    </Grid>
</ContentPage>