<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
            x:Class="Re_RunApp.Views.ActivityScreen"
             Title="Activity"
             BackgroundColor="White" >
    <Grid RowDefinitions="2.4*,2*,Auto" ColumnSpacing="0" RowSpacing="10" Padding="10">
        <!-- Top: Two panes (statistics and video) -->
        <Grid Grid.Row="0" ColumnDefinitions="1*,1*" ColumnSpacing="10">
            <!-- Statistics Pane -->
            <Frame Grid.Column="0" Padding="10" BackgroundColor="#f0f0f0" CornerRadius="8">
                <Grid ColumnDefinitions="*,20,*" RowDefinitions="Auto,Auto,Auto,Auto" ColumnSpacing="10" RowSpacing="12">
                    <!-- Linkerkolom -->
                    <StackLayout Grid.Column="0" Grid.Row="0" Spacing="2">
                        <Label Text="Distance meters" FontAttributes="None" FontSize="16" HorizontalTextAlignment="Center" />
                        <Label x:Name="DistanceLabel" Text="0" FontAttributes="Bold" FontSize="30" HorizontalTextAlignment="Center"/>
                    </StackLayout>
                    <StackLayout Grid.Column="0" Grid.Row="1" Spacing="2">
                        <Label Text="Segment remaining meters" FontAttributes="None" FontSize="16" HorizontalTextAlignment="Center"/>
                        <Label x:Name="SegmentRemainingLabel" Text="0" FontAttributes="Bold" FontSize="30" HorizontalTextAlignment="Center"/>
                    </StackLayout>
                    <StackLayout Grid.Column="0" Grid.Row="2" Spacing="2">
                        <Label Text="Total meters climbed" FontAttributes="None" FontSize="16" HorizontalTextAlignment="Center"/>
                        <Label x:Name="TotalClimbedLabel" Text="0" FontAttributes="Bold" FontSize="30" HorizontalTextAlignment="Center"/>
                    </StackLayout>
                    <StackLayout Grid.Column="0" Grid.Row="3" Spacing="2">
                        <Label Text="Total meters descended" FontAttributes="None" FontSize="16" HorizontalTextAlignment="Center"/>
                        <Label x:Name="TotalDescendedLabel" Text="0" FontAttributes="Bold" FontSize="30" HorizontalTextAlignment="Center"/>
                    </StackLayout>

                    <!-- Middelste kolom blijft leeg -->

                    <!-- Rechterkolom -->
                    <StackLayout Grid.Column="2" Grid.Row="0" Spacing="2">
                        <Label Text="Elapsed time" FontAttributes="None" FontSize="16" HorizontalTextAlignment="Center"/>
                        <Label x:Name="TimeLabel" Text="00:00" FontAttributes="Bold" FontSize="30" HorizontalTextAlignment="Center"/>
                    </StackLayout>
                    <StackLayout Grid.Column="2" Grid.Row="1" Spacing="2">
                        <Label Text="Heartrate" FontAttributes="None" FontSize="16" HorizontalTextAlignment="Center"/>
                        <Label x:Name="HeartrateLabel" Text="0" FontAttributes="Bold" FontSize="30" HorizontalTextAlignment="Center"/>
                    </StackLayout>
                    <StackLayout Grid.Column="2" Grid.Row="2" Spacing="2">
                        <Label Text="Speed Min/KM" FontAttributes="None" FontSize="16" HorizontalTextAlignment="Center"/>
                        <Label x:Name="SpeedLabel" Text="00:00" FontAttributes="Bold" FontSize="30" HorizontalTextAlignment="Center"/>
                    </StackLayout>
                    <StackLayout Grid.Column="2" Grid.Row="3" Spacing="2">
                        <Label Text="Inclination %" FontAttributes="None" FontSize="16" HorizontalTextAlignment="Center"/>
                        <Label x:Name="InclinationLabel" Text="0.0" FontAttributes="Bold" FontSize="30" HorizontalTextAlignment="Center"/>
                    </StackLayout>
                    <!-- Voeg hier eventueel meer statistieken toe in de rechterkolom -->
                </Grid>
            </Frame>
            <!-- Video Pane -->
            <Frame x:Name="VideoFrame" Grid.Column="1" Padding="0" BackgroundColor="#000" CornerRadius="8" HasShadow="False">
                <!-- Video -->
                <toolkit:MediaElement x:Name="RouteVideo"
                      ShouldAutoPlay="True"
                      Aspect="AspectFill"
                      ShouldLoopPlayback="False"
                      ShouldShowPlaybackControls="False"
                      ShouldMute="True"
                      HorizontalOptions="Center" 
                      Source="embed://no-media.mp4"                
                      VerticalOptions="Center" ShouldKeepScreenOn="True" />
            </Frame>
        </Grid>

        <!-- Middle: Graph -->
        <Frame Grid.Row="1" Padding="0" Margin="0,10,0,10" BackgroundColor="#e0e0e0" CornerRadius="8" HasShadow="False">
            <Image x:Name="ElevationGraphImage" Grid.Row="0" Margin="10" Aspect="Fill" />
        </Frame>

        <!-- Bottom: Finish Button -->
        <Button Grid.Row="2"
             x:Name="FinishButton"
             Text="Finish"
             Clicked="OnFinishClicked"
             FontSize="Large"
             HeightRequest="50"
             HorizontalOptions="FillAndExpand"
             Margin="0,10,0,0"
             IsVisible="Hidden"/>
        <Button Grid.Row="2"
                x:Name="StopButton"
                Text="STOP"
                Clicked="OnStopClicked"
                BackgroundColor="Red"
                FontSize="Large"
                HeightRequest="50"
                HorizontalOptions="FillAndExpand"
                Margin="0,10,0,0"
                IsVisible="Hidden"/>
        <Button Grid.Row="2"
                x:Name="StartButton"
                Text="Start your Run!"
                Clicked="OnStartClicked"
                BackgroundColor="Green"
                FontSize="Large"
                HeightRequest="50"
                HorizontalOptions="FillAndExpand"
                Margin="0,10,0,0"
                IsVisible="Visible"/>
    </Grid>
</ContentPage>